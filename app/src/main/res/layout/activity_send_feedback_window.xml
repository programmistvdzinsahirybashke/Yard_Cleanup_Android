<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendFeedbackWindow">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отправить обращение"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите фамилию:"
        android:textSize="20sp"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSurname"
        android:layout_marginTop="10dp"
        android:hint="Введите фамилию"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите имя:"
        android:textSize="20sp"
        android:layout_below="@id/editTextSurname"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_marginTop="10dp"
        android:hint="Введите имя"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textViewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите телефон или e-mail:"
        android:textSize="20sp"
        android:layout_below="@id/editTextName"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editTextContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewContact"
        android:layout_marginTop="10dp"
        android:hint="Введите контактную информацию"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите адрес:"
        android:textSize="20sp"
        android:layout_below="@id/editTextContact"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAddress"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <Spinner
        android:id="@+id/spinnerStreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerCity"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <Spinner
        android:id="@+id/spinnerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerStreet"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textViewFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите текст обращения:"
        android:textSize="20sp"
        android:layout_below="@id/spinnerNumber"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editTextFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFeedback"
        android:layout_marginTop="10dp"
        android:hint="Введите текст обращения"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/imageCaptcha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextFeedback"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editTextCaptcha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageCaptcha"
        android:layout_marginTop="10dp"
        android:hint="Введите капчу"
        android:padding="10dp"/>

    <Button
        android:id="@+id/buttonSendFeedback"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Отправить обращение"
        android:textSize="20sp"
        android:background="@drawable/button_rounded_blue"
    android:textColor="#FFFFFF"
    android:layout_below="@id/editTextCaptcha"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"

        android:background="@drawable/button_rounded_blue"
    android:textColor="#FFFFFF"
    android:layout_below="@id/buttonSendFeedback"

    android:layout_marginTop="10dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
